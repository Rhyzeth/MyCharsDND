doctype html
html(lang="en" class="h-100" data-bs-theme="dark")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Home
    link(rel="stylesheet" href="/my-express-app/src/css/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="/my-express-app/src/js/scripts.js")

  body.p-0.m-0.border-0.bd-example.m-0.border-0(data-template="index")
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand.text-light(href="home.html") Fantasy Betting
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active.text-light(aria-current="page" href="index.html") Home
            li.nav-item
              a.nav-link.text-light(href="news.html") News
            li.nav-item
              a.nav-link.text-light(href="matchups.html") Matchups
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle.text-light(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Teams
              ul.dropdown-menu.dropdown-menu-dark
                li
                  a.dropdown-item(href="AFCTeams.html") AFC
                li
                  a.dropdown-item(href="NFCTeams.html") NFC
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href="PowerRankings.html") Power Rankings
          form.d-flex(role="search")
            input.form-control.me-2.bg-light.text-dark.border-dark(type="search" placeholder="Search" aria-label="Search")
            button.btn.btn-outline-light(type="submit") Search

    // Main Content
    .main-content
      #side-text-left.side-text Text Area
      #news-area.news-area Main News Area
      #side-text-right.side-text Text Area
